@model IEnumerable<API.Models.Conta>

@{
    ViewData["Title"] = "Contas";
}

<h1>Contas</h1>
<br />

<div class="d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-secondary"><i class="fa fa-plus-circle"></i> Incluir</a>
    <a target="_blank" href="http://localhost:5172/api/contas" class="btn" data-toggle="tooltip" data-html="true" title="API de Contas">
        <i class="fa fa-plug"></i> <b>API</b>
    </a>
</div>
<hr />

<table id="tabelaIndex" class="table table-sm table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeConta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObsConta)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Inativo)
            </th>*@
            <th class="d-flex justify-content-center">Ação</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeConta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObsConta)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Inativo)
            </td>*@
            <td class="d-flex justify-content-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-default">
                        <i class="fa fa-pencil"></i> Editar
                    </a> | 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-default">
                        <i class="fa fa-info"></i> Detalhes
                    </a> | 
                    @*<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-default">
                        <i class="fa fa-trash"></i> Excluir
                    </a>*@
                    <a onclick="Inativar(@item.Id)" class="btn btn-sm btn-default">
                        <i class="fa fa-trash"></i> Excluir
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function(){
            $('#tabelaIndex').DataTable( {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }
            });
        });

        function Inativar(id) {
            alertify.confirm('Lista de Contas', 'Confirmar excluisão ?',function(){
                window.location.href = '@Url.Action("Inativar","Conta")/'+id;
            },null);
        }
    </script>
}