@model API.Models.Conta

@{
    ViewData["Title"] = "Editar";
}

<h1>Conta</h1>

<hr />
<br />

<div class="d-flex justify-content-center">
    <div class="card border-secondary row">
        <div class="card-header">Editar</div>
        <div class="card-body text-secondary">
            <form asp-action="Edit" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <div>
                        <label asp-for="NomeConta" class="control-label"></label>
                        <label style="color:brown"> *</label>
                    </div>
                    <input asp-for="NomeConta" class="form-control" />
                    <span asp-validation-for="NomeConta" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <div>
                        <label asp-for="Tipo" class="control-label"></label>
                        <label style="color:brown"> *</label>
                    </div>
                    @*<input asp-for="Tipo" class="form-control upper" />*@
                    <select asp-for="Tipo" class ="form-control" asp-items="ViewBag.ContaId">
                        <option>S</option>
                        <option>E</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="ObsConta" class="control-label"></label>
                    <input asp-for="ObsConta" class="form-control" />
                    <span asp-validation-for="ObsConta" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label asp-for="Inativo" class="control-label"></label>
                    <input asp-for="Inativo" class="form-control" />
                    <span asp-validation-for="Inativo" class="text-danger"></span>
                </div>*@
                <br />
                <div class="form-group">
                    @*<input type="submit" value="Save" class="btn btn-primary" />*@
                    <button type="submit" class="btn btn-secondary">
                        <i class="fa fa-floppy-o"> Salvar</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<hr />
<br />

<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-list-ul"></i> Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
