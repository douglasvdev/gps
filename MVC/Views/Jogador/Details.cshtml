@model API.Models.Jogador

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Jogador</h1>

<hr />
<br />

<div class="d-flex justify-content-center">
    <div class="card border-secondary row">
        <div class="card-header text-center" style="color: white; background-color: rgb(37,88,126); font-weight: bolder">Detalhes</div>
        <div class="card-body text-secondary">
            <form>
                <div class="form-group">
                    <label asp-for="NomeJogador" class="control-label"></label>
                    <input asp-for="NomeJogador" class="form-control" readonly/>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Mensalista" class="control-label"></label>
                    <input asp-for="Mensalista" class="form-control" readonly/>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="ObsJogador" class="control-label"></label>
                    <input asp-for="ObsJogador" class="form-control" readonly/>
                </div>
                <br />
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary"><i class="fa fa-pencil"></i> Editar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<br />
<hr />

<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-list-ul"></i> Lista</a>
</div>
