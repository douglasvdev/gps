@model API.Models.Jogador

@{
    ViewData["Title"] = "Incluir";
}

<h1>Jogador</h1>

<hr />
<br />

<div class="d-flex justify-content-center">
    <div class="card border-secondary row">
        <div class="card-header">Incluir</div>
        <div class="card-body text-secondary">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NomeJogador" class="control-label"></label>
                    <input asp-for="NomeJogador" class="form-control" />
                    <span asp-validation-for="NomeJogador" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mensalista" class="control-label"></label>
                    <input asp-for="Mensalista" class="form-control" />
                    <span asp-validation-for="Mensalista" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ObsJogador" class="control-label"></label>
                    <input asp-for="ObsJogador" class="form-control" />
                    <span asp-validation-for="ObsJogador" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label asp-for="Inativo" class="control-label"></label>
                    <input asp-for="Inativo" class="form-control" />
                    <span asp-validation-for="Inativo" class="text-danger"></span>
                </div>*@
                <br />
                <div class="form-group">
                    @*<input type="submit" value="Create" class="btn btn-primary" />*@
                    <button type="submit" class="btn btn-secondary">
                        <i class="fa fa-floppy-o"> Salvar</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<br />
<hr />

<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
