@model API.Models.Lancamento

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Lancamento</h1>

<hr />
<br />

<div class="d-flex justify-content-center">
    <form>
        <div class="card border-secondary">
            <div class="card-header text-white text-center bg-warning" style="font-weight: bolder">Detalhes</div>
            <div class="card-body text-secondary row d-flex justify-content-around">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="DtPrevisao" class="control-label"></label>
                            <input asp-for="DtPrevisao" class="form-control" readonly/>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Valor" class="control-label"></label>
                            <input asp-for="Valor" class="form-control" readonly/>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="ObsLancamento" class="control-label"></label>
                            <input asp-for="ObsLancamento" class="form-control" readonly/>
                        </div>
                        <br />
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="ContaId" class="control-label"></label>
                            <input asp-for="ContaId" class="form-control" readonly/>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="JogadorId" class="control-label"></label>
                            <input asp-for="JogadorId" class="form-control" readonly/>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="DtBaixa" class="control-label"></label>
                            <input asp-for="DtBaixa" class="form-control" readonly/>
                        </div>
                        <br />
                    </div>
                    @*<div class="form-group">
                        <label asp-for="Inativo" class="control-label"></label>
                        <input asp-for="Inativo" class="form-control" />
                        <span asp-validation-for="Inativo" class="text-danger"></span>
                    </div>*@
                    <br />
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary"><i class="fa fa-pencil"></i> Editar</a>
                    </div>
            </div>
        </div>
    </form>
</div>

<br />
<hr />
<br />

